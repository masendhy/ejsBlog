<%- include('partials/header'); -%>

    <div class="container">
        <div class="jumbotron jumbotron-fluid">

            <h1 class="display-3">Compose</h1>


            <form class="post" action="/compose" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="titlePost" placeholder="Post Title Here" autocomplete="off">
                    <br>
                    <div class="form-group">
                        <textarea class="form-control" name="bodyPost" id="Textarea1" rows="3" placeholder=" Post Article Here " autocomplete="off"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-secondary">Publish</button>
            </form>

        </div>

        <%- include('partials/footer'); -%>